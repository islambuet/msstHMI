    <table class="table" style="margin: 0">
        <tbody>
        <tr>
            <td style="padding: 5px">
                <span>Cnx</span>
                <svg height="20" width="20">
                    <circle id="cnx_status" cx="8.75" cy="8.75" r="7.304" stroke="black" stroke-width="1" fill="#fff"></circle>
                </svg></td>
            <td style="padding: 5px">
                <span>Faulted</span>
                <svg height="20" width="20">
                    <circle id="faulted_status" cx="8.75" cy="8.75" r="7.304" stroke="black" stroke-width="1" fill="#fff"></circle>
                </svg></td>
            <td class="text-right" style="padding: 5px">
                <button id="close" class="button-3d button-rectangle cursor-pointer" style="width: 20px;height: 20px;padding: 0;" >
                    <svg  style="vertical-align: inherit;" height="22" width="20">
                        <line x1="2" y1="2" x2="18" y2="18" style="stroke:#fff;stroke-width:2" />
                        <line x1="18" y1="2" x2="2" y2="18" style="stroke:#fff;stroke-width:2" />
                    </svg>
                </button>
            </td>
        </tr>
        </tbody>
    </table>
    <div style="padding:0px 10px;">
        <table class="table table-sm table-bordered" style="margin: 0">
            <tbody>
            <tr>
                <td id="motor_name">-</td>
                <td id="location">-</td>
            </tr>
            <tr>
                <td id="ip_address">-</td>
                <td id="current_speed">-</td>
            </tr>
            <tr id="tr_speed">
                <td colspan="2">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Set Speed</span>
                        </div>
                        <input id="speed" type="text" class="form-control text-right float_positive" value="0">
                        <div class="input-group-append">
                            <span id="label_speed_input_unit" class="input-group-text">./.</span>
                        </div>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <div id="command_buttons_container" style="padding:0px 20px;">
        <table class="table table-sm table-borderless" style="margin: 0;">
            <tbody>
            <tr>
                <td class="text-center"><button id="button-motor-start" class="button-3d button-rectangle">Start</button></td>
                <td class="text-center"><button id="button-motor-stop" class="button-3d button-rectangle">Stop</button></td>
            </tr>
            </tbody>
        </table>
    </div>
    <div id="speed_error" class="text-danger text-center" style="display: none;padding:1px 10px;">Invalid Speed.Range[min: <span id="speed_min"></span> max: <span id="speed_max"></span>]</div>



